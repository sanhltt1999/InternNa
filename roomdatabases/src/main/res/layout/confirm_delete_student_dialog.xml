<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/tv_title_confirm_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="@string/confirm_delete" />
    
    <TextView
        android:id="@+id/tv_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_confirm_delete"
        android:layout_marginTop="3dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/are_you_sure"/>

    <TextView
        android:id="@+id/tv_not_agree"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_dialog"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_confirm_bg"
        android:gravity="center"
        android:text="@string/no"
        android:textColor="#F44336"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message_dialog"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:background="@drawable/button_agree_delete_bg"
        android:text="@string/yes"
        android:textColor="@color/teal_200"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>